# Austin Rifle Club - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Authentication
# =============================================================================
# Secret key for better-auth session encryption (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here

# Base URL for auth callbacks
BETTER_AUTH_URL=http://localhost:8787

# =============================================================================
# OPTIONAL - Email (Resend)
# =============================================================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email address for sending emails (must be verified in Resend)
RESEND_FROM_EMAIL=noreply@austinrifleclub.org

# =============================================================================
# OPTIONAL - Payments (Stripe)
# =============================================================================
# Get your keys from https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_) for development, live keys (sk_live_) for production
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Publishable key for frontend (safe to expose)
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# CLOUDFLARE - Set via wrangler secret, not .env
# =============================================================================
# These are set in wrangler.toml or via `wrangler secret put`
# - DB (D1 Database)
# - KV (KV Namespace)
# - R2 (R2 Bucket)

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Enable debug logging
DEBUG=false

# =============================================================================
# FRONTEND (web/.env)
# =============================================================================
# API URL for Astro frontend
PUBLIC_API_URL=http://localhost:8787
