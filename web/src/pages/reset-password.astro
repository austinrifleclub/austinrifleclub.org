---
/**
 * Reset Password Page
 *
 * Allows users to set a new password using a reset token.
 */
import Layout from '../layouts/Layout.astro';
import ResetPasswordForm from '../components/ResetPasswordForm';
---

<Layout title="Reset Password" description="Set a new password for your Austin Rifle Club account">
  <section class="py-12 md:py-20 bg-gray-50 min-h-[80vh] flex items-center">
    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="bg-white rounded-lg shadow-md p-8">
        <div class="text-center mb-8">
          <img src="/logo.svg" alt="ARC" class="h-16 w-16 mx-auto mb-4" />
          <h1 class="text-2xl font-bold text-gray-900">Set New Password</h1>
          <p class="text-gray-600 text-sm mt-2">
            Enter your new password below
          </p>
        </div>

        <ResetPasswordForm client:load />
      </div>
    </div>
  </section>
</Layout>
