---
/**
 * Forgot Password Page
 *
 * Password reset request form.
 */
import Layout from '../layouts/Layout.astro';
import ForgotPasswordForm from '../components/ForgotPasswordForm';
---

<Layout title="Forgot Password" description="Reset your Austin Rifle Club member password">
  <section class="py-12 md:py-20 bg-gray-50 min-h-[80vh] flex items-center">
    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="bg-white rounded-lg shadow-md p-8">
        <div class="text-center mb-8">
          <img src="/logo.svg" alt="ARC" class="h-16 w-16 mx-auto mb-4" />
          <h1 class="text-2xl font-bold text-gray-900">Reset Password</h1>
          <p class="text-gray-600 text-sm mt-2">
            Enter your email and we'll send you a link to reset your password
          </p>
        </div>

        <ForgotPasswordForm client:load />

        <div class="mt-6 text-center text-sm text-gray-600">
          <p>
            Remember your password?{' '}
            <a href="/login" class="text-green-700 hover:text-green-800 font-medium">
              Sign in
            </a>
          </p>
        </div>
      </div>

      <div class="mt-6 text-center text-sm text-gray-500">
        <p>
          Need help?{' '}
          <a href="mailto:info@austinrifleclub.org" class="text-green-700 hover:text-green-800">
            Contact us
          </a>
        </p>
      </div>
    </div>
  </section>
</Layout>
