---
/**
 * Membership Application Page
 *
 * Multi-step application form for new members.
 */
import Layout from '../layouts/Layout.astro';
import ApplicationForm from '../components/ApplicationForm';
---

<Layout title="Apply for Membership" description="Start your Austin Rifle Club membership application">
  <section class="py-8 md:py-12 bg-surface min-h-screen">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-primary mb-2">
          Membership Application
        </h1>
        <p class="text-secondary">
          Complete the form below to apply for membership at Austin Rifle Club.
        </p>
      </div>

      <ApplicationForm client:load />
    </div>
  </section>
</Layout>
