    allowedFirearms: ['Handguns', 'PCC', 'Shotguns'],
    maxCaliber: '.45 ACP',
  },
  {
    id: 'K',
    name: 'Range K - Action Bay',
    description: 'Multi-purpose action shooting bay.',
    features: ['Steel targets', '180° shooting'],
