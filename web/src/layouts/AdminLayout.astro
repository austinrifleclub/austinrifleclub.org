---
/**
 * Admin Layout
 *
 * Layout for admin dashboard pages with sidebar navigation.
 */
import '../styles/global.css';

interface Props {
  title: string;
  activeNav?: string;
}

const { title, activeNav } = Astro.props;

const navItems = [
  { href: '/admin', label: 'Dashboard', icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6' },
  { href: '/admin/ranges', label: 'Ranges', icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z' },
  { href: '/admin/events', label: 'Events', icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z' },
  { href: '/admin/members', label: 'Members', icon: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z' },
  { href: '/admin/applications', label: 'Applications', icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z' },
  { href: '/admin/settings', label: 'Settings', icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <title>{title} | Admin - Austin Rifle Club</title>
  </head>
  <body class="min-h-screen bg-gray-100">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-gray-800 text-white flex-shrink-0 hidden md:block">
        <div class="p-4 border-b border-gray-700">
          <a href="/admin" class="flex items-center space-x-2">
            <img src="/logo.png" alt="Austin Rifle Club" class="h-8 w-8" />
            <div>
              <span class="font-bold block">ARC Admin</span>
              <span class="text-xs text-gray-400">Management Portal</span>
            </div>
          </a>
        </div>
        <nav class="p-4">
          <ul class="space-y-1">
            {navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class={`flex items-center gap-3 px-3 py-2 rounded-lg transition-colors ${
                    activeNav === item.label
                      ? 'bg-green-600 text-white'
                      : 'text-gray-300 hover:bg-gray-700 hover:text-white'
                  }`}
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
                  </svg>
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
        <div class="absolute bottom-0 left-0 w-64 p-4 border-t border-gray-700">
          <a href="/" class="flex items-center gap-2 text-gray-400 hover:text-white text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Website
          </a>
        </div>
      </aside>

      <!-- Mobile header -->
      <div class="md:hidden fixed top-0 left-0 right-0 bg-gray-800 text-white p-4 z-50 flex items-center justify-between">
        <a href="/admin" class="flex items-center space-x-2">
          <img src="/logo.png" alt="Austin Rifle Club" class="h-8 w-8" />
          <span class="font-bold">Admin</span>
        </a>
        <button id="mobile-admin-menu-btn" class="p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile sidebar overlay -->
      <div id="mobile-admin-sidebar" class="hidden fixed inset-0 z-40 md:hidden">
        <div class="absolute inset-0 bg-black/50" id="mobile-admin-overlay"></div>
        <aside class="absolute left-0 top-0 bottom-0 w-64 bg-gray-800 text-white">
          <div class="p-4 border-b border-gray-700 flex items-center justify-between">
            <span class="font-bold">Menu</span>
            <button id="close-admin-menu" class="p-1">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <nav class="p-4">
            <ul class="space-y-1">
              {navItems.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class={`flex items-center gap-3 px-3 py-2 rounded-lg transition-colors ${
                      activeNav === item.label
                        ? 'bg-green-600 text-white'
                        : 'text-gray-300 hover:bg-gray-700'
                    }`}
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
                    </svg>
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
          <div class="absolute bottom-0 left-0 w-64 p-4 border-t border-gray-700">
            <a href="/" class="flex items-center gap-2 text-gray-400 hover:text-white text-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Back to Website
            </a>
          </div>
        </aside>
      </div>

      <!-- Main content -->
      <main class="flex-1 overflow-auto md:pt-0 pt-16">
        <div class="p-6">
          <slot />
        </div>
      </main>
    </div>

    <script>
      const menuBtn = document.getElementById('mobile-admin-menu-btn');
      const sidebar = document.getElementById('mobile-admin-sidebar');
      const overlay = document.getElementById('mobile-admin-overlay');
      const closeBtn = document.getElementById('close-admin-menu');

      function toggleMenu() {
        sidebar?.classList.toggle('hidden');
      }

      menuBtn?.addEventListener('click', toggleMenu);
      overlay?.addEventListener('click', toggleMenu);
      closeBtn?.addEventListener('click', toggleMenu);
    </script>
  </body>
</html>
