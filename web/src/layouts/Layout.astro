---
/**
 * Base layout for all pages
 *
 * Includes:
 * - Navigation header
 * - Footer
 * - Tailwind styles
 */
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Austin Rifle Club - Private shooting club in Manor, Texas since 1894" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="apple-touch-icon" href="/logo.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#166534" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <title>{title} | Austin Rifle Club</title>
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <header class="bg-green-800 text-white shadow-lg">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <a href="/" class="flex items-center space-x-2">
              <img src="/logo.svg" alt="ARC" class="h-10 w-10" />
              <span class="font-bold text-xl hidden sm:block">Austin Rifle Club</span>
            </a>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-6">
            <a href="/range-status" class="hover:text-green-200 transition-colors font-medium">
              Range Status
            </a>
            <a href="/calendar" class="hover:text-green-200 transition-colors">
              Calendar
            </a>
            <a href="/ranges" class="hover:text-green-200 transition-colors">
              Ranges
            </a>
            <a href="/membership" class="hover:text-green-200 transition-colors">
              Membership
            </a>
            <a href="/about" class="hover:text-green-200 transition-colors">
              About
            </a>
            <div class="pl-4 border-l border-green-600">
              <a
                href="/login"
                class="bg-green-600 hover:bg-green-500 px-4 py-2 rounded-md transition-colors"
              >
                Member Login
              </a>
            </div>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden flex items-center">
            <button
              type="button"
              id="mobile-menu-button"
              class="text-white hover:text-green-200"
              aria-label="Toggle menu"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col space-y-2">
            <a href="/range-status" class="hover:bg-green-700 px-3 py-2 rounded-md font-medium">
              Range Status
            </a>
            <a href="/calendar" class="hover:bg-green-700 px-3 py-2 rounded-md">
              Calendar
            </a>
            <a href="/ranges" class="hover:bg-green-700 px-3 py-2 rounded-md">
              Ranges
            </a>
            <a href="/membership" class="hover:bg-green-700 px-3 py-2 rounded-md">
              Membership
            </a>
            <a href="/about" class="hover:bg-green-700 px-3 py-2 rounded-md">
              About
            </a>
            <a
              href="/login"
              class="bg-green-600 hover:bg-green-500 px-3 py-2 rounded-md text-center mt-2"
            >
              Member Login
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main id="main-content" class="flex-grow">
      <slot />
    </main>

    <footer class="bg-gray-800 text-gray-300 py-8 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Contact -->
          <div>
            <h3 class="text-white font-semibold mb-3">Contact</h3>
            <p class="text-sm">16312 Littig Rd</p>
            <p class="text-sm">Manor, TX 78653</p>
            <p class="text-sm mt-2">
              <a href="mailto:info@austinrifleclub.org" class="hover:text-white">
                info@austinrifleclub.org
              </a>
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-white font-semibold mb-3">Quick Links</h3>
            <ul class="space-y-1 text-sm">
              <li><a href="/range-rules" class="hover:text-white">Range Rules</a></li>
              <li><a href="/calendar" class="hover:text-white">Event Calendar</a></li>
              <li><a href="/membership" class="hover:text-white">Join the Club</a></li>
              <li><a href="/faq" class="hover:text-white">FAQ</a></li>
            </ul>
          </div>

          <!-- About -->
          <div>
            <h3 class="text-white font-semibold mb-3">About ARC</h3>
            <p class="text-sm">
              Founded in 1894, Austin Rifle Club is a private, non-profit shooting sports
              organization dedicated to promoting safe and responsible firearms use.
            </p>
          </div>
        </div>

        <div class="border-t border-gray-700 mt-8 pt-6 text-center text-sm">
          <p>&copy; {new Date().getFullYear()} Austin Rifle Club, Inc. All rights reserved.</p>
          <p class="mt-1">Texas Non-Profit Corporation, Charter #52790</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Register service worker for PWA
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js').catch(console.error);
      }
    </script>
  </body>
</html>
